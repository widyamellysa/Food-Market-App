<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".ui.auth.signup.SignupFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:layout_marginTop="25dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="26dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="16dp"
            style="@style/TextView.PoppinsNormal16sp020202"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone No." />

        <EditText
            android:padding="10dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/ic_shape_rectangle6"
            style="@style/EditText.PoppinsNormal14sp8D92A3"
            android:hint="Type your phone number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="16dp"
            style="@style/TextView.PoppinsNormal16sp020202"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address" />

        <EditText
            android:padding="10dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/ic_shape_rectangle6"
            style="@style/EditText.PoppinsNormal14sp8D92A3"
            android:hint="Type your address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="16dp"
            style="@style/TextView.PoppinsNormal16sp020202"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="House No." />

        <EditText
            android:inputType="textPassword"
            android:padding="10dp"
            android:background="@drawable/ic_shape_rectangle6"
            style="@style/EditText.PoppinsNormal14sp8D92A3"
            android:hint="Type your house number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="16dp"
            style="@style/TextView.PoppinsNormal16sp020202"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City" />

        <EditText
            android:inputType="textPassword"
            android:padding="10dp"
            android:background="@drawable/ic_shape_rectangle6"
            style="@style/EditText.PoppinsNormal14sp8D92A3"
            android:hint="Select your city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSignUpNow"
            android:textAllCaps="false"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Button.Primary"
            android:text="Sign Up Now"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>